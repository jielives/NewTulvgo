<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yg.tulvgo.ui.activity.LoginActivity">

    <RelativeLayout
        android:id="@+id/bg_information"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/color_ffb15a"
        >
        <ImageView
            android:id="@+id/heard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/mehead"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            />
         <TextView
             android:layout_marginTop="20dp"
             android:layout_below="@id/heard"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:text="点击登录"
             android:textColor="@color/color_ffff"
             />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffff"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/scenic_spot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="@dimen/padding_30px"
                android:paddingTop="@dimen/padding_30px">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/scenic_spot" />

                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv1"
                    android:layout_marginTop="@dimen/margin_19px"
                    android:gravity="center"
                    android:text="景区"
                    android:textColor="@color/color_6666"
                    android:textSize="@dimen/text_size_22px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="@dimen/padding_30px"
                android:paddingTop="@dimen/padding_30px">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/hotel" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv2"
                    android:layout_marginTop="@dimen/margin_19px"
                    android:gravity="center"
                    android:text="酒店"
                    android:textColor="@color/color_6666"
                    android:textSize="@dimen/text_size_22px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/specialty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="@dimen/padding_30px"
                android:paddingTop="@dimen/padding_30px">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/specialty" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv3"
                    android:layout_marginTop="@dimen/margin_19px"
                    android:gravity="center"
                    android:text="特产"
                    android:textColor="@color/color_6666"
                    android:textSize="@dimen/text_size_22px" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/food"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/padding_30px"
                    android:paddingTop="@dimen/padding_30px">
                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@drawable/food" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv4"
                        android:layout_marginTop="@dimen/margin_19px"
                        android:gravity="center"
                        android:text="美食"
                        android:textColor="@color/color_6666"
                        android:textSize="@dimen/text_size_22px" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/metap" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/mecollection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="@dimen/padding_30px"
                android:paddingTop="@dimen/padding_30px">
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:src="@drawable/home_selector"
                    android:text="0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv"
                    android:layout_marginTop="@dimen/margin_19px"
                    android:gravity="center"
                    android:text="我的收藏"
                    android:textColor="@color/color_6666"
                    android:textSize="@dimen/text_size_22px" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/view1"
        ></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height88px"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_tourists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_36px"
            android:gravity="center"
            android:text="常用游客"
            android:textColor="@color/color_333"
            android:textSize="@dimen/text_size_24px" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_36px"
            android:gravity="center"
            android:src="@drawable/right" />
    </RelativeLayout>
    <View
        style="@style/view"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height88px"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_36px"
            android:gravity="center"
            android:text="收货地址"
            android:textColor="@color/color_333"
            android:textSize="@dimen/text_size_24px" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_36px"
            android:gravity="center"
            android:src="@drawable/right" />
    </RelativeLayout>
    <View
        style="@style/view"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height88px"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_36px"
            android:gravity="center"
            android:text="优惠券"
            android:textColor="@color/color_333"
            android:textSize="@dimen/text_size_24px" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_36px"
            android:gravity="center"
            android:src="@drawable/right" />
    </RelativeLayout>
    <View
        style="@style/view"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height88px"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_36px"
            android:gravity="center"
            android:text="联系客服"
            android:textColor="@color/color_333"
            android:textSize="@dimen/text_size_24px" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_36px"
            android:gravity="center"
            android:src="@drawable/right" />
    </RelativeLayout>
    <View
        style="@style/view"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height88px"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_36px"
            android:gravity="center"
            android:text="服务条款"
            android:textColor="@color/color_333"
            android:textSize="@dimen/text_size_24px" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_36px"
            android:gravity="center"
            android:src="@drawable/right" />
    </RelativeLayout>
    <View
        style="@style/view"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height88px"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_36px"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/color_333"
            android:textSize="@dimen/text_size_24px" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_36px"
            android:gravity="center"
            android:src="@drawable/right" />
    </RelativeLayout>
    <View
        style="@style/view"></View>
</LinearLayout>
